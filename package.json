{
  "name": "@questpie/universal-boilerplate",
  "module": "index.ts",
  "type": "module",
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "@types/bun": "latest",
    "check-dependency-version-consistency": "^4.1.0",
    "npm-check-updates": "^17.1.1",
    "rimraf": "^6.0.1"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "scripts": {
    "clean": "bun clean:nm && bun clean:lock && bun clean:artifacts",
    "clean:artifacts": "bun rimraf --glob ./**/dist ./**/build ./**/out ./**/.next ./**/.expo",
    "clean:lock": "bun rimraf --glob ./**/bun.lockb",
    "clean:nm": "bun rimraf --glob ./**/node_modules",
    "cli": "bun run ./scripts/cli.ts",
    "deps:check": "bun check-dependency-version-consistency .",
    "deps:update": "bun npm-check-updates -ui -ws",
    "dev:api": "cd apps/api && bun run dev",
    "dev:web": "cd apps/web && bun run dev",
    "dev:native": "cd apps/native && bun run dev",
    "dev:worker": "cd apps/api && bun run dev:worker",
    "fix": "bun @biomejs/biome check --write --unsafe ./packages ./apps",
    "format": "bun @biomejs/biome format --write ./packages ./apps",
    "lint": "bun @biomejs/biome lint ./packages ./apps",
    "postinstall": "bun deps:check",
    "types:check": "tsc --noEmit"
  },
  "workspaces": ["apps/*", "packages/*"]
}
